$webResourceManager.requireResourcesForContext("com.dot.wstscustomerqc:approve-reject-resources")


<div id="approve-dialog" class="aui-dialog2 aui-dialog2-medium" role="dialog">
    <header class="aui-dialog2-header">
        <h2 class="aui-dialog2-header-main">Approve Request</h2>
    </header>
    <div class="aui-dialog2-content">
        <form action="/secure/ApproveRequest.jspa" method="post" enctype="multipart/form-data">
            <div class="field-group">
                <label for="approve-comment">Comment</label>
                <textarea id="approve-comment" name="comment" class="textarea"></textarea>
            </div>
            <div class="field-group">
                <label for="approve-attachment">Attachment</label>
                <input type="file" id="approve-attachment" name="attachment"/>
            </div>
        </form>
    </div>
    <footer class="aui-dialog2-footer">
        <div class="aui-dialog2-footer-actions">
            <button id="approve-submit" class="aui-button aui-button-primary">Approve</button>
            <button id="approve-cancel" class="aui-button aui-button-link">Cancel</button>
        </div>
    </footer>
</div>
